    "ext-pdo": "*",
    "beberlei/doctrineextensions": "^1.3",
    "doctrine/dbal": "^3.7",
    "doctrine/migrations": "^3.7",
    "doctrine/orm": "^2.17",
    "php-di/php-di": "^7.0",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.12",
    "slim/twig-view": "^3.3",
    "symfony/cache": "^7.0",
    "symfony/console": "^7.0",
    "vlucas/phpdotenv": "^5.6",
    "vlucas/valitron": "^1.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  }
}
